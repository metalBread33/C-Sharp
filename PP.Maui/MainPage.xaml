<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PP.Maui.MainPage"
             >
    
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0" HorizontalOptions="Center" 
                   VerticalOptions="Center" Text="Welcome to Bootleg Pratice Panther" 
                   FontSize="Header"></Label>
            <Button Grid.Row="1" Text="Employee Login" Clicked="Employee_Clicked"></Button>
            <Button Grid.Row="2" Text="Employer Login" Clicked="Employer_Clicked"></Button>



        </Grid>
    </ScrollView>


</ContentPage>
