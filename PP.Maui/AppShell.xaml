<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PP.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PP.Maui"
    xmlns:local2="clr-namespace:PP.Maui.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>


    <ShellContent
        Title="Edit Client"
        ContentTemplate ="{DataTemplate local2:EditClient}"   
        Route="EditClient"/>

    <ShellContent
        Title="Add Client"
        ContentTemplate="{DataTemplate local2:Add_Client}"
        Route="Add_Client"/>

    
    <ShellContent
        Title="Client Info"
        ContentTemplate="{DataTemplate local2:ViewClient}"
        Route="ViewClient"/>

    <ShellContent
        Title="Create Project"
        ContentTemplate="{DataTemplate local2:AddProj}"
        Route="AddProj"/>

    <ShellContent
        Title="EditProject"
        ContentTemplate="{DataTemplate local2:EditProj}"
        Route="EditProj"
        />

</Shell>
